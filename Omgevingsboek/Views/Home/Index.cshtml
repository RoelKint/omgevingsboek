@model Models.PresentationModels.HomeIndexPM

@{
    ViewBag.Title = "Boeken";
}

<div class="col-xs-6 col-md-9 content" id="content">
    <h3 class="rowheader">Mijn Boeken</h3>
    <div class="row grid books" id="mijnBoeken">
        
        @*<ol class="breadcrumb list-inline">
                <li class="active"><span class="glyphicon glyphicon-home"></span></li>
            </ol>*@
        @foreach (Models.OmgevingsBoek_Models.Boek boek in Model.BoekenEigenaar)
        {
            <div class="col-sm-6 col-md-3 element" id="@boek.Id">
                <a href="/home/Boek?id=@boek.Id">
                    <img class="img-responsive" src="@boek.Afbeelding" />
                    <span class="caption">@boek.Naam</span>
                </a>
                <span class="buttons">
                    <a style="padding: 0px;" type="button" href="#" data-id="@(@boek.Id)" data-type="boek" data-container="body" data-toggle="popover" data-placement="bottom" class="shareItem expand btn btn-default">
                        <span class="glyphicon glyphicon-share"></span>
                    </a>
                </span>
            </div>
        }
        <div class="static col-sm-6 col-md-3" id="toevoegenBoek">
            <a href="/Boeken/Create" id="toevoegenBoek">
                <div class="toevoegen">
                    <span class="caption"><span class="glyphicon glyphicon-plus"></span> Boek toevoegen</span>
                </div>
                <div class="toevoegenClick">
                    <input type="text" placeholder="Titel van het boek" id="boekTitel" naam="boekTitel" /><br />
                    <span class="btn btn-default btn-file">
                        Browse <input type="file" placeholder="Kies een bestand" />
                    </span>
                    <input class="btn btn-default" type="submit" />
                    <input class="btn btn-default" type="button" value="Annuleren" id="btnAnnulerenAddBoek" />

                </div>
            </a>
        </div>

    </div>
    <h3 class="rowheader">Gedeelde Boeken</h3>
    <div class="grid2 row books" id="gedeeldeBoeken">
        
        @foreach (Models.OmgevingsBoek_Models.Boek boek in Model.BoekenGedeeld)
        {
            <div class="col-sm-6 col-md-3 element" id="@boek.Id">
                <a href="/home/Boek?id=@boek.Id">
                    <img src="@boek.Afbeelding" />
                    <span class="caption">@boek.Naam</span>
                </a>
            </div>
        }
    </div>
</div>




