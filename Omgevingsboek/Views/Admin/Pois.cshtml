@model List<Models.OmgevingsBoek_Models.Poi>
@{
    ViewBag.Title = "PoI's";
}

<h2>Point of Interest's</h2>

<div class="col-xs-6 col-md-9 content" id="buttonsAdBoven">
    <button type="submit" form="formA" value="Submit">Delete</button>
    <button type="submit" form="formA" value="0">vorige 50</button>
    <button type="submit" form="formA" value="50">volgende 50</button>
</div>
<form id="formA" action="demo_form.asp" method="get">

    <table style=" border: 2px solid black;
    border-collapse: collapse;" class="col-xs-6 col-md-9 content">
        <tr>
            <th style="width:20%;   border-bottom: 1px solid black;
    border-collapse: collapse;">Naam</th>
            <th style="width:10%; border-bottom: 1px solid black;
    border-collapse: collapse;">Eigenaar</th>
            <th style="width:20%; border-bottom: 1px solid black;
    border-collapse: collapse;">Address</th>
            <th style="width:40%; border-bottom: 1px solid black;
    border-collapse: collapse;">tags</th>
            <th style="width:10%; border-bottom: 1px solid black;
    border-collapse: collapse;">Select</th>
        </tr>
        @foreach (var pooi in Model)
        {
            <tr>
                <td>@pooi.Naam</td>
                <td>@pooi.Eigenaar.Email</td>
                <td> @pooi.Straat @pooi.Nummer , @pooi.Postcode @pooi.Gemeente</td>
                <td>@foreach (var tag in pooi.Tags)
                {
                    if (tag.Equals(pooi.Tags.Last()))
                    {
                        <a href="#">@tag.Naam</a>
                    }
                    else
                    {
                        <a href="#">@tag.Naam</a>@(',')
                    }
                }</td>
                <td><input type="checkbox" name="vehicle" value="@pooi.ID"></td>
            </tr>
        }

    </table>
</form>
<div class="col-xs-6 col-md-9 content" id="buttonsAdBeneden">
    <button type="submit" form="formA" value="Submit">Delete</button>
    <button type="submit" form="formA" value="0">vorige 50</button>
    <button type="submit" form="formA" value="50">volgende 50</button>
</div>