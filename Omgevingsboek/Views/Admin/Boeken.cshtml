@model List<Models.OmgevingsBoek_Models.Boek>

@{
    ViewBag.Title = "Boeken";
}
<div class="adminList">
    <h2>Boeken</h2>
    <div class="col-xs-6 col-md-9 content" id="buttonsAdBoven">
        <button type="submit" form="formA" value="Submit">Delete</button>
        <button type="submit" form="formA" value="0">vorige 50</button>
        <button type="submit" form="formA" value="50">volgende 50</button>
    </div>
    <form id="formA" action="" method="get">

        <table class="table table-hover">
            <colgroup>
                <col class="col-lg-3 col-xs-3 col-md-3" />
                <col class="col-lg-3 col-xs-3 col-md-3" />
                <col class="col-lg-3 col-xs-3 col-md-3" />
                <col class="col-lg-3 col-xs-3 col-md-3" />
            </colgroup>

            <tr>
                <th>Naam</th>
                <th>Eigenaar</th>
                <th>Activiteiten</th>
                <th>Options</th>
            </tr>
            @foreach (var boe in Model)
            {
                <tr>
                    <td>@boe.Naam</td>
                    <td>@boe.Eigenaar.Email</td>
                    <td>
                        @foreach (var act in boe.Activiteiten)
                        {
                            if (act.Equals(boe.Activiteiten.Last()))
                            {
                                <a href="#">@act.Naam</a>
                            }
                            else
                            {
                                <a href="#">@act.Naam</a>@(',')
                            }
                        }
                    </td>
                    <td>
                        <div>
                            <input type="button" name="" value="Details" />
                            <input type="button" name="" value="Edit" />
                            <input type="button" name="" value="Remove" />
                        </div>
                    </td>
                </tr>
            }

        </table>
    </form>
</div>