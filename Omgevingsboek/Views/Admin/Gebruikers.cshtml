@model List<Models.PresentationModels.UserActivities>
@{
    ViewBag.Title = "Gebruikers";
}
<div class="adminList">
<h2>Gebruikers</h2>

<div class="col-xs-6 col-md-9 content" id="buttonsAdBoven">
    <button type="submit" form="formA" value="Submit">Delete</button>
    <button type="submit" form="formA" value="0">vorige 50</button>
    <button type="submit" form="formA" value="50">volgende 50</button>
</div>
<form id="formA" action="demo_form.asp" method="get">

    <table class="table table-hover">
        <tr>
            <th>Naam</th>
            <th>Eigenaar</th>
            <th>Activiteiten</th>
            <th>Select</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User.Voornaam @item.User.Naam</td>
                <td>@item.User.Naam</td>
                <td>
                    @foreach (var itempje in item.Activiteiten)
                    {
                        if (itempje.Equals(item.Activiteiten.Last()))
                        {
                            <a href="#">@itempje.Naam</a>
                        }
                        else
                        {
                            <a href="#">@itempje.Naam</a>@(',')
                        }
                    }
            </td>

                <td>
                    <div>
                        <input type="button" name="" value="Details" />
                        <input type="button" name="" value="Edit" />
                        <input type="button" name="" value="Remove" />
                    </div>
                </td>
        </tr>
        }

    </table>
    </form>
</div>
