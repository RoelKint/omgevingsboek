@model Models.MVC_Models.ResetPasswordViewModel
@{
    ViewBag.Title = "herstel wachtwoord";
}
<div class="col-md-12">
    <h2>@ViewBag.Title.</h2>

    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Herstel uw wachtwoord.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Code)
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-6 col-xs-8 col-sm-6">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-6 col-xs-8 col-sm-6">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "password", pattern = @"(?=^.{6,}$)(?=.*\d+)(?=.*\W+)(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$", required = "required" })
                <b>Wachtwoord moet minstens 6 karakters bevatten met minstens 1 hoofdletter, 1 leesteken en 1 getal</b>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-6 col-xs-8 col-sm-6">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6 col-xs-8 col-sm-6">
                <input type="submit" class="btn btn-default btn-primary" value="Reset" />
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
